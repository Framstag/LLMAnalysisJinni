{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "SubDirectoryList",
    "description": "List of categorized directories",
    "type": "object",
    "properties": {
        "reasoning": {
            "type": "string",
            "description": "Short description of reasoning behind the given result"
        },
        "directories": {
            "type": "array",
            "description": "List of all directories",
            "items": {
                "type": "object",
                "title": "Directory",
                "description": "A specific directory",
                "properties": {
                    "path": {
                        "type": "string",
                        "description": "Path of the directory"
                    },
                    "categoryId": {
                        "type": "string",
                        "enum": ["Src", "GenSrc", "TestSrc", "TestGenSrc", "Obj", "TestObj"],
                        "description": "Id of the category"
                    },
                    "desc": {
                        "type": "string",
                        "description": "Description of directory contents"
                    }
                },
                "required": [
                    "path",
                    "categoryId",
                    "desc"
                ]
            }
        }
    },
    "required": [
        "reasoning",
        "directories"
    ]
}
