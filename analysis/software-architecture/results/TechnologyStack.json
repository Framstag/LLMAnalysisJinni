{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "TechnologyStack",
    "description": "Represents a description of the technology stack used in the project",
    "type": "object",
    "properties": {
        "reasoning": {
            "type": "string",
            "description": "Short description of reasoning behind the given result"
        },
        "summary": {
            "type": "string",
            "description": "Short description of the used stack (one paragraph)"
        },
        "technologies": {
            "type": "array",
            "description": "List of technologies in the standard architecture",
            "items": {
                "type": "object",
                "title": "Technology",
                "description": "A single technology",
                "properties": {
                    "aspect": {
                        "type": "string",
                        "description": "Short description of the evaluated aspect"
                    },
                    "technology": {
                        "type": "string",
                        "description": "Name of the technology"
                    },
                    "desc": {
                        "type": "string",
                        "description": "Description of the technology"
                    }
                },
                "required": [
                    "aspect",
                    "technology",
                    "desc"
                ]
            }
        },
        "derivations": {
            "type": "array",
            "description": "List of derivations from the standard architecture",
            "items": {
                "type": "object",
                "title": "Derivation",
                "description": "A single derivation",
                "properties": {
                    "aspect": {
                        "type": "string",
                        "description": "Short description of the evaluated aspect"
                    },
                    "derivation": {
                        "type": "string",
                        "description": "Description of the derivation"
                    }
                },
                "required": [
                    "aspect",
                    "derivation"
                ]
            }
        }
    },
    "required": [
        "reasoning",
        "summary",
        "architecture",
        "technologies",
        "derivations"
    ]
}
