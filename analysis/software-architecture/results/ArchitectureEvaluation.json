{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "ArchitectureEvaluation",
    "description": "A number of evaluation points",
    "type": "object",
    "properties": {
        "reasoning": {
            "type": "string",
            "description": "Short description of reasoning behind the given result"
        },
        "evaluations": {
            "type": "array",
            "description": "List of evaluations",
            "items": {
                "type": "object",
                "title": "Evaluation",
                "description": "An individual evaluation",
                "properties": {
                    "aspect": {
                        "type": "string",
                        "description": "Short description of the evaluated aspect"
                    },
                    "expectation": {
                        "type": "string",
                        "description": "Expectation in the context of the aspect analyzed"
                    },
                    "reasoning": {
                        "type": "string",
                        "description": "Reasoning that lead to the finding"
                    },
                    "finding": {
                        "type": "string",
                        "description": "The actual finding"
                    },
                    "recommendation": {
                        "type": "string",
                        "description": "Recommendation of action to improve the situation"
                    },
                    "urgency": {
                        "type": "string",
                        "enum": ["NONE","LOW", "MEDIUM", "HIGH"],
                        "description": "Urgency of recommendation"
                    },
                    "criticality": {
                        "type": "string",
                        "enum": ["NONE","LOW", "MEDIUM", "HIGH"],
                        "description": "Criticality of recommendation"
                    }
                },
                "required": [
                    "aspect",
                    "expectation",
                    "finding",
                    "recommendation",
                    "urgency",
                    "criticality"
                ]
            }
        }
    },
    "required": [
        "reasoning",
        "evaluations"
    ]
}
